#!/usr/bin/env bash
# Configure your Nginx server so that /
# redirect_me is redirecting to another page.
sudo apt-get -y update
sudo apt-get -y upgrade
sudo apt-get -y install nginx
sudo service nginx start
echo 'Hello World!' | sudo tee /var/www/html/index.html
# redirect
find_this="\tlocation / {"
replace_this="\tlocation /redirect_me {\n\t\treturn 301 \$\scheme://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}\n\n\tlocation / {"
sudo sed -i "s@^$find_this@$replace_this@" /etc/nginx/sites-available/default
sudo service nginx restart
